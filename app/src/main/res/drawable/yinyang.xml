<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- partie blanche-->
    <item android:bottom="90dp"
        android:id="@+id/white_circle_container">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <size
                android:width="180dp"
                android:height="90dp"></size>
            <solid android:color="@color/white"/>
            <corners
                android:topLeftRadius="200dp"
                android:topRightRadius="200dp"></corners>

        </shape>

    </item>
    <item android:width="90dp"
        android:height="45dp" android:top="45dp" android:id="@+id/white_halfcircle_container">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="100dp"></corners>
        </shape>
    </item>

    <!-- partie blanche-->
    <item android:top="90dp" android:id="@+id/black_circle_container">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <size
                android:width="180dp"
                android:height="90dp"></size>
            <solid android:color="@color/black"/>
            <corners
                android:bottomLeftRadius="200dp"
                android:bottomRightRadius="200dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"></corners>
        </shape>
    </item>

    <item android:top="90dp" android:width="90dp"
        android:height="45dp" android:left="90dp"
        android:id="@+id/black_halfcircle_container">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners
                android:bottomLeftRadius="100dp"
                android:bottomRightRadius="100dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"></corners>
        </shape>
    </item>

</layer-list>
